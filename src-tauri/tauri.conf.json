{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "harbor-sweep",
  "version": "0.1.0",
  "identifier": "com.harbor-sweep.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Harboor Sweep",
        "minWidth": 480,
        "minHeight": 480,
        "width": 480,
        "height": 480,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "rpm",
      "deb",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
